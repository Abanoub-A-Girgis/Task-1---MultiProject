<%- include('../../partials/headerLayout.ejs', {pageName: "banner", pageTitle: "Banner Page", pathLevel: "/"}) %>
<div class="mx-5 my-4">
<h3>Edit Banner</h3>

<table>
    <tr>
        <td>
            <form action="../update" method="post" enctype="multipart/form-data">
                <label for="title">Banner Title</label>
                <input type="text" name="title" id="title" value="<%= oneSlide[0].title %>"/>
                <br />
                <label for="details">details</label>
                <input
                  type="text"
                  name="details"
                  id="details"
                  style="height: 200px"
                  value="<%= oneSlide[0].details %>"
                />
                <br />
                <label for="photo">Photo</label>
                <input
                  type="file"
                  name="photo"
                  id="photo"
                  onchange="photoPreviewFn(this);"
                />
                <br />

                <input type="hidden" name="id" value="<%= oneSlide[0].id %>">

                <input type="submit" value="Update Banner" class="mt-2 btn btn-primary">
            </form>
        </td>
        <td>
            <img src="/uploads/<%=oneSlide[0].photo%>" id="photoPreview" alt="photo preview" style="max-width: 55%; max-height: 55%;">
        </td>
    </tr>
</table>
</div>

<script>
    function photoPreviewFn(inputFile) {
        var file = inputFile.files[0];
        if(file) {
            var reader = new FileReader();
            reader.onload = () => {
                document.getElementById("photoPreview").setAttribute("src", reader.result);
            }
            reader.readAsDataURL(file);
        }
    }
</script>



