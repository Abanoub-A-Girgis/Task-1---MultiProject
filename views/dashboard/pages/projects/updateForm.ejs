<%- include('../../partials/headerLayout.ejs', {pageName: "Projects", pageTitle:
"Project Page", pathLevel: "/"}) %>
<div class="mx-5 my-4">
<h3>Edit Project</h3>

<table>
    <tr>
        <td>
            <form action="../update" method="post" enctype="multipart/form-data">
                <label for="title">Project Title</label>
                <input type="text" name="title" id="title" value="<%= oneProject[0].title %>"/>
                <br />
                <label for="description">Description</label>
                <input
                  type="text"
                  name="description"
                  id="description"
                  style="height: 200px"
                  value="<%= oneProject[0].description %>"
                />
                <br />
                <label for="photo">Photo</label>
                <input
                  type="file"
                  name="photo"
                  id="photo"
                  onchange="photoPreviewFn(this);"
                />
                <br />

                <input type="hidden" name="id" value="<%= oneProject[0].id %>">

                <input type="submit" value="Update Project" class="mt-2 btn btn-primary">
            </form>
        </td>
        <td>
            <img src="/uploads/<%=oneProject[0].photo%>" id="photoPreview" alt="photo preview" style="max-width: 55%; max-height: 55%;">
        </td>
    </tr>
</table>
</div>

<script>
    function photoPreviewFn(inputFile) {
        var file = inputFile.files[0];
        if(file) {
            var reader = new FileReader();
            reader.onload = () => {
                document.getElementById("photoPreview").setAttribute("src", reader.result);
            }
            reader.readAsDataURL(file);
        }
    }
</script>



